# =============================================================================
# Production Environment Variables
# =============================================================================
# Copy this file to .env for production deployment
# IMPORTANT: Replace all placeholder values with actual production values

# =============================================================================
# Autodesk Platform Services (APS) OAuth Configuration
# =============================================================================
# Register your production app at: https://aps.autodesk.com/
APS_CLIENT_ID=your_production_aps_client_id_here
APS_CLIENT_SECRET=your_production_aps_client_secret_here
APS_CALLBACK_URL=https://yourdomain.com/api/auth/callback

# =============================================================================
# Security Secrets
# =============================================================================
# Generate using: openssl rand -hex 32
SESSION_SECRET=generate_a_random_secret_at_least_32_characters_long
ENCRYPTION_KEY=generate_a_random_32_byte_hex_key_using_openssl

# =============================================================================
# CORS and Frontend Configuration
# =============================================================================
CORS_ORIGIN=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# =============================================================================
# Database Configuration (Production)
# =============================================================================
# For managed PostgreSQL services (AWS RDS, Railway, etc.)
DATABASE_URL=postgresql://username:password@your-db-host:5432/acc_user_manager

# =============================================================================
# Redis Configuration (Production)
# =============================================================================
# For managed Redis services (AWS ElastiCache, Upstash, Railway, etc.)
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your_redis_password_if_required

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info
PORT=3001

# =============================================================================
# Job Queue Configuration
# =============================================================================
QUEUE_CONCURRENCY=5
JOB_TIMEOUT_MS=300000
JOB_MAX_RETRIES=3

# =============================================================================
# Optional: Monitoring and Error Tracking
# =============================================================================
# Uncomment and configure if using Sentry
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# Optional: Custom Domain Configuration
# =============================================================================
# If deploying behind a reverse proxy or load balancer
# TRUST_PROXY=true
